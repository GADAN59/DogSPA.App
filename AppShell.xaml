<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DogSPA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DogSPA"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="DogSPA"
            ContentTemplate="{DataTemplate local:MainPage}"
            />

        <ShellContent
            Title ="Prezentare"
            ContentTemplate="{DataTemplate local:Prezentare}"
            />

        <ShellContent
            Title ="Manage Pets"
            ContentTemplate="{DataTemplate local:PetsPage}"
            />

        <ShellContent
            Title ="My Pets"
            ContentTemplate="{DataTemplate local:MyPetsPage}"
            />
    </TabBar>

</Shell>
